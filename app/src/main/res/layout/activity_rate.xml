<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView17"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/rectangle1"
        android:padding="1dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView17"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="21dp"
                android:paddingStart="2dp"
                android:text="RATES:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:text="The rates here are typically defined for area 100 square guz and for 4 persons in home. " />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="353dp"
                android:layout_height="268dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="107dp"
                android:background="@android:color/background_light"
                android:maxLines="20"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text=" Full time househelper : Rs. 15,000/month\n\n Daily maids : Rs. 2500/month\n\n Guards : Rs. 15.000/month\n\n Washing clothes : Rs. 5000/month\n\n Dusting : Rs. 500/day \n\n Babysitting/ Adult care : Rs. 18,000/month \n\n Washing dishes : Rs. 3000/month\n\n "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView29"
                app:srcCompat="@drawable/ic_rate_review_black_24dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>